<div id="catalogWrapper">
	<div id="catalogBanner">
		<div class="row">
			<div class="container">
				<div class="col-sm-12">
					<div class="catalog-banner-title">
						<h2>Our Products</h2>
                        <div class="section-title-underline"></div>
					</div>
					
                    <div class="section-content">
                        <p>Food is the universal language for friendship and love. We pride ourselves in knowing that we produce the highest quality products that showcase the best flavors Latin America has to offer. Our goal is to share these exquisite flavors with you as you sit around the table with the company of those you hold dear to your heart.</p>
                    </div>
				</div>
			</div>
		</div>
	</div>

	<div id="badgesWrapper">
        <div class="row">
            <div class="container">
                <div class="col-md-10 col-md-offset-1">
                    
                    <div class="section-content">
                        <div class="gmo-free-badges-wrapper">
                            <div class="row">
                                <div class="col-md-12">
                                    <img src="assets/images/gmo-free-badges.png">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{#each model as |category|}}
        <div {{action "displayProducts" category on="click"}} class="catalog-title-banner" id="{{category.headerBgId}}">
            <h1>{{category.name}}</h1>
        </div>
        <div class="catalog-categories-body" id="{{category.backgroundId}}">
            <div class="row">
                <div class="container">
                    {{#if category.displayProducts}}
                        <div class="catalog-body-padding">
                        {{#each category.products as |product|}}
                            {{#if product.isExtended}}
                                <div class="expanded-product-wrapper">
                                    <div class="col-md-12">
                                        <button class="closeProductInfo" {{action "displayProductInfo" product category on="click"}}>
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </button>
                                        <div class="col-md-4">
                                            <div class="ind-product-wrapper">
                                                <img src="{{product.productImg}}"><br/>
                                                {{light-box href=product.productImg data-lightbox=product.engName data-title=product.engName data-class="thumbnailImage"}}
                                                {{light-box href=product.labelImg data-lightbox=product.engName  data-title=product.engName data-class="thumbnailImage"}}
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="product-info-wrapper" id={{product.id}}>
                                                <h1>{{product.engName}}</h1>
                                                <h4>{{product.spaName}} - {{product.quantity}}</h4>
                                                <p>{{product.description}}</p>
                                                <form class="test" {{action 'sendMandrillEmail' on="submit"}}>
                                                    <div class="col-md-3">
                                                        <input id="name{{product.id}}" placeholder="Name" class="form-control name">
                                                    </div>
                                                    <div class="col-md-3">
                                                        <input id="email{{product.id}}" placeholder="Email" class="form-control email">
                                                    </div>
                                                    <div class="col-md-3">
                                                        <input id="phone{{product.id}}" placeholder="Phone" class="form-control phone">
                                                    </div>
                                                    <div class="col-md-3">
                                                        <button class="btn btn-default"><a type="submit" class="test" value="Submit">Get a Quote</a></button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>    
                            {{else}}
                                <div class="col-md-4">
                                    <div {{action "displayProductInfo" product on="click"}} class="ind-product-wrapper">
                                        <div {{action "product.expand" on="keyPress"}}> 
                                            <img src="{{product.productImg}}" >
                                            <h5>{{product.engName}}</h5>
                                            <p>{{product.spaName}}<br/>{{product.quantity}}</p>
                                        </div>
                                    </div>
                                </div>
                            {{/if}}
                        {{/each}}
                        <div class="clearfix"></div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>                  
    {{/each}}

     

	{{contact-section}}
</div>